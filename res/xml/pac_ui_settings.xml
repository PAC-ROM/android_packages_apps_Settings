<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Appbar -->
    <PreferenceScreen
        android:key="@+id/app_sidebar"
        android:fragment="com.android.settings.pac.AppSidebar"
        android:title="@string/app_sidebar_title"
        android:icon="@drawable/ic_settings_appsidebar" />

    <!-- Custom Animations -->
    <PreferenceScreen
        android:key="@+id/animation_settings"
        android:fragment="com.android.settings.pac.AnimationSettings"
        android:title="@string/animation_settings_title"
        android:icon="@drawable/ic_settings_animations" />

    <!-- Custom ProgressBar -->
    <PreferenceScreen
        android:key="@+id/progressbar_settings"
        android:fragment="com.android.settings.pac.ProgressBar"
        android:title="@string/progressbar_title"
        android:icon="@drawable/ic_settings_progressbar" />

    <!-- Gesture Anywhere -->
    <PreferenceScreen
        android:key="@+id/gesture_anywhere"
        android:fragment="com.android.settings.pac.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title"
        android:icon="@drawable/ic_settings_gesture_anywhere" />

    <!-- Init.D -->
    <PreferenceScreen
        android:id="@+id/initD"
        android:fragment="com.android.settings.pac.InitD"
        android:title="@string/init_d_title"
        android:icon="@drawable/ic_settings_init" />

    <!-- PAC Console -->
    <PreferenceScreen
        android:id="@+id/pac_console"
        android:title="@string/pac_console_title"
        android:icon="@drawable/ic_settings_pacstats">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.pac.console"
            android:targetClass="com.pac.console.PacConsole" />
    </PreferenceScreen>

    <!-- Pie -->
    <PreferenceScreen
        android:key="@+id/pie_settings"
        android:fragment="com.android.settings.pac.pie.PieControl"
        android:title="@string/pie_control_title"
        android:icon="@drawable/ic_settings_pie" />

    <!-- Recent Panel Settings -->
    <PreferenceScreen
        android:key="@+id/recents_panel"
        android:fragment="com.android.settings.pac.RecentsPanelSettings"
        android:title="@string/recents_panel_settings_title"
        android:icon="@drawable/ic_settings_recents" />

    <!-- Wakelock Blocker -->
    <PreferenceScreen
        android:key="@+id/wakelock_blocker"
        android:fragment="com.android.settings.pac.WakeLockBlocker"
        android:title="@string/wakelock_blocker"
        android:icon="@drawable/ic_settings_wakelock_blocker" />

</PreferenceScreen>
