<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/animation_settings_title"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Keyboard Animation -->
    <PreferenceScreen
        android:key="interface_animation_keyboard"
        android:fragment="com.android.settings.pac.animations.KeyboardAnimationInterfaceSettings"
        android:title="@string/ime_animation_title" />

    <!-- ListView Animation -->
    <PreferenceScreen
        android:key="interface_animation_listview"
        android:fragment="com.android.settings.pac.animations.ListViewAnimationInterfaceSettings"
        android:title="@string/listview_title" />

    <!-- Scroll Animation -->
    <PreferenceScreen
        android:key="interface_animation_scroll"
        android:fragment="com.android.settings.pac.animations.ScrollAnimationInterfaceSettings"
        android:title="@string/scrolling_title" />

    <!-- System Animation -->
    <PreferenceScreen
        android:key="interface_animation_system"
        android:fragment="com.android.settings.pac.animations.SystemAnimationInterfaceSettings"
        android:title="@string/bars_and_menus_category_system_title" />

    <!-- Toast Animation -->
    <PreferenceScreen
        android:key="interface_animation_toast"
        android:fragment="com.android.settings.pac.animations.ToastAnimationInterfaceSettings"
        android:title="@string/toast_animation_title" />

</PreferenceScreen>
